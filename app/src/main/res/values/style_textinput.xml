<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    REGULAR-->
    <!--    change the filled box color and the floating label color-->
    <style name="InputTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/colorInputErrorText</item>
        <item name="errorIconTint">@color/colorInputErrorText</item>
        <item name="android:textColorHint">@color/colorInputHint</item>
        <item name="passwordToggleTint">@color/colorInputText</item>
        <item name="hintTextColor">@color/colorInputFloatingLabel</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="materialThemeOverlay"> @style/MyThemeOverlayTextInputEditTextFilledBox</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="errorTextColor">@color/colorInputErrorText</item>
    </style>

    <style name="MyThemeOverlayTextInputEditTextFilledBox"  parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <!--    change edittext font and text size -->
    <style name="EditTextStyle" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textCursorDrawable">@color/colorInputText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="error_appearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorInputErrorText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>




<!--    REGISTER -->
    <style name="InputTextStyleRegister" parent="InputTextStyle">
    </style>

    <!--    REGISTER -->
    <style name="InputTextStyleLogin" parent="InputTextStyle">
    </style>

    <!--    CAST TV -->
    <style name="InputTextStyleCastTV" parent="InputTextStyle">
    </style>


</resources>