    <!--    change the filled box color and the floating label color-->
    <style name="InputTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="boxBackgroundColor">#33FFFFFF</item>-->
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/colorInputErrorText</item>
        <item name="errorIconTint">@color/colorInputErrorText</item>
        <item name="android:textColorHint">@color/colorInputHint</item>
        <item name="hintTextColor">@color/colorInputFloatingLabel</item>
