<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

    <style name="PrimaryButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryButtonText</item>
        <item name="android:backgroundTint">@color/colorPrimaryButtonBg</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:minWidth">190dp</item>
        <item name="android:letterSpacing">0</item>
<!--        <item name="materialThemeOverlay">@style/PrimaryButtonStyleOverlay</item>-->
    </style>

    <style name="PostCallToActionStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryButtonText</item>
        <item name="android:backgroundTint">@color/colorPrimaryButtonBg</item>
        <item name="strokeColor">@color/colorPrimaryButtonBg</item>
        <item name="cornerRadius">32dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:minWidth">190dp</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="materialThemeOverlay">@style/PrimaryButtonStyleOverlay</item>-->
    </style>

    <style name="ExtendedFABStyle" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorFABExtendedText</item>
        <item name="android:backgroundTint">@color/colorFABExtendedBg</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="materialThemeOverlay">@style/PrimaryButtonStyleOverlay</item>-->
    </style>

    <style name="ExtendedFABIconStyle" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorFABExtendedText</item>
        <item name="android:backgroundTint">@color/colorFABExtendedBg</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="materialThemeOverlay">@style/PrimaryButtonStyleOverlay</item>-->
    </style>
</resources>