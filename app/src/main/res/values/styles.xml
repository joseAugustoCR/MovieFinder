<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="editTextStyle">@style/fontEditText</item>

    </style>


    <!--    cursor color and hint color-->
    <style name="TextInputLayoutAppearance" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!--    change the filled box color and the floating label color-->
    <style name="FilledBoxLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="boxBackgroundColor">#33FFFFFF</item>-->
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint"> @color/white</item>
    </style>

    <!--    change edittext font and text size -->
    <style name="fontEditText" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@color/textColor</item>
    </style>

    <style name="fontTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/my_fonts</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/my_fonts</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="CustomDatePickerDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker"
        parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="SwitchStyle">
        <!-- active thumb & track color (30% transparency) -->
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>


</resources>
