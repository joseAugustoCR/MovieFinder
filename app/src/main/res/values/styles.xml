<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearence</item>

<!--        TextInput-->
<!--        <item name="editTextStyle">@style/EditTextStyle</item>-->
        <item name="textInputStyle">@style/InputTextStyle</item>
        <item name="progressBarStyle">@style/ProgressBarStyle</item>
        <item name="materialButtonStyle">@style/PrimaryButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFABStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="appBarLayoutStyle">@style/AppBarRegularStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>

    </style>

    <style name="CardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radiusCardHomeProduct</item>
        <item name="cardElevation">@dimen/elevationCardHomeProduct</item>

    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/font_regular</item>

    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>


    <style name="CustomDatePickerDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker"
        parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>


<!--    Spinner date picker-->
    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>



    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:colorBackground">@color/colorDialogBg</item>
        <item name="android:textColor">@color/colorDialogText</item>
    </style>


    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorButtonTextDialog</item>
        <item name="android:textColor">@color/colorButtonTextDialog</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
