<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBarRegularStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/colorCollapsingAppBarRegular</item>
        <item name="colorControlNormal">@color/colorToolbarTitle</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>


    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/CollapsedTitle</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedTitle</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsedTitle</item>
        <item name="popupTheme">@style/MyMenu</item>
        <item name="colorControlNormal">@color/colorToolbarTitle</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>


    </style>

    <style name="CollapsingToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/CollapsedTitle</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedTitle</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsedTitle</item>
        <item name="expandedTitleMarginBottom">22dp</item>
        <item name="expandedTitleMarginStart">20dp</item>
        <item name="colorControlNormal">@color/colorToolbarTitle</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>


    </style>

    <style name="MenuTextAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>


    <!--    Toolbar-->
    <style name="CollapsedTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="titleTextColor">@color/colorToolbarTitle</item>
        <item name="fontFamily">@font/font_medium</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>

    </style>

