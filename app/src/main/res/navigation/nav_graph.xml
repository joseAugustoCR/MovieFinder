<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.moviefinder.ui.movies.MoviesFragment"
        android:label="Discover"
        tools:layout="@layout/movies_fragment" >
        <action
            android:id="@+id/action_discoverFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.moviefinder.ui.moviedetails.MovieDetailsFragment"
        android:label="movie_details_fragment"
        tools:layout="@layout/movie_details_fragment" >
        <argument
            android:name="movie"
            app:argType="com.example.moviefinder.networking.DiscoverMovie" />
    </fragment>
</navigation>