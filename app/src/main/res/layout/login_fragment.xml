<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:background="@color/colorLoginBg"
    tools:context=".ui.auth.login.LoginFragment"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/colorPrimary"
            android:scaleType="centerCrop"/>


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/backBtn"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:layout_margin="8dp"
            android:padding="8dp"
            />



    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_arrow_back"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:hint="E-mail"
            android:layout_marginLeft="16dp"
            style="@style/InputTextStyleLogin"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            >

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            style="@style/InputTextStyleLogin"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/emailInput"
            app:layout_constraintBottom_toTopOf="@id/resultBtn"
            app:layout_constraintVertical_bias="0"
            android:hint="Senha"
            android:layout_below="@id/emailInput"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:paddingLeft="12dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu sua senha?"
            android:padding="8dp"
            android:id="@+id/forgotPasswordBtn"
            app:layout_constraintTop_toBottomOf="@id/passwordInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/forgotPasswordBtn"
            app:layout_constraintBottom_toTopOf="@id/registerBtn"
            android:id="@+id/loginBtns"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">




        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            android:layout_marginBottom="16dp"
            android:text="Entrar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo cadastro"
            style="@style/TextButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/registerBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultBtn"
            android:text="result"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            />

    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/loadingLayout"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/colorLoginBg"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/login_progress"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                style="@style/ProgressBarLoginStyle"
                android:indeterminateTint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="visible" />

        </FrameLayout>
    </FrameLayout>

</androidx.core.widget.NestedScrollView>