<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorPostCardBg"
    app:cardCornerRadius="@dimen/radiusPostCard"
    android:layout_marginBottom="30dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/font_bold"
            android:gravity="center_vertical"
            android:paddingBottom="0dp"
            android:textColor="@color/colorPostTitle"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@id/userAvatar"
            app:layout_constraintRight_toLeftOf="@id/optionsMenuBtn"
            app:layout_constraintTop_toTopOf="@id/userAvatar"
            app:layout_goneMarginRight="16dp"
            tools:text="Notificação" />

        <LinearLayout
            android:id="@+id/subtitleLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/userName"
            app:layout_constraintRight_toLeftOf="@id/optionsMenuBtn"
            app:layout_constraintTop_toBottomOf="@id/userName">

            <TextView
                android:id="@+id/timeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center_vertical"
                android:textColor="@color/colorPostSubtitle"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="1 mês atrás" />

            <ImageView
                android:id="@+id/viewIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center_vertical"
                android:textColor="@color/colorPostSubtitle"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="1322" />


        </LinearLayout>


        <ImageView
            android:id="@+id/optionsMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/userAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/userAvatar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mediaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/exclusiveTxt">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtubePlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:enableLiveVideoUi="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:showFullScreenButton="false"
                app:showYouTubeButton="false" />

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorPostImgBg"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/maskExclusive"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/exclusiveTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="6dp"
            android:fontFamily="@font/font_regular"
            android:gravity="center_vertical"
            android:text="Exclusivo para assinantes"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleLayout" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:autoLink="all"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="8dp"
            android:text="Olá, pessoal. TUdo bem?\nSou a Raquel\nEsse é meu link www.google.com.br\nEsse meu e-mail raquel@raquel.com.br"
            android:textColor="@color/colorPostDescription"
            android:textColorLink="@color/colorAccent"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/mediaLayout" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:drawableEnd="@drawable/ic_star"
            style="@style/PostCallToActionStyle"
            android:fontFamily="@font/font_bold"
            android:text="Ver comentários"
            app:layout_constraintTop_toBottomOf="@id/description"
            />


        <LinearLayout
            android:id="@+id/bottomBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/actionBtn">

            <LinearLayout
                android:id="@+id/likesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPostNumbers"
                    android:textSize="14sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:text="1322" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commentsIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/commentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPostNumbers"
                    android:textSize="14sp"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:text="1322" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/ic_star" />
            </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lastCommentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomBtns">

            <ImageView
                android:id="@+id/commentUserAvatar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_star"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lastComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/font_regular"
                android:paddingBottom="0dp"
                android:text="Professora! Eu amo tuas aulas. Te acho foda pra caralho :)"
                android:textColor="@color/colorLastComment"
                android:textSize="13sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/commentUserAvatar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/commentUserAvatar"
                app:layout_goneMarginRight="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
