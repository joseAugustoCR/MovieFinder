<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mediaLayout"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtubePlayerView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:enableLiveVideoUi="false"
            app:showYouTubeButton="false"
            android:layout_height="wrap_content"
            app:showFullScreenButton="true" />

        <ImageView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPostImgBg"
            android:visibility="gone"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:9"
            android:id="@+id/postImage"
            />

        <FrameLayout
            android:id="@+id/maskExclusive"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mediaLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:id="@+id/nested">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLinearLayout"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/colorPostCardBg"
                android:layout_marginTop="0dp"
                android:id="@+id/postCard"
                app:cardCornerRadius="10dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true"
                    android:id="@+id/postConstraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/userAvatar"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/optionsMenuBtn"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_star"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/userAvatar"
                        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
                        android:paddingRight="16dp"
                        />


                    <TextView
                        android:textColor="@color/colorPostTitle"
                        android:textSize="14sp"
                        tools:text="Notificação teste"
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        app:layout_constrainedWidth="true"
                        android:drawablePadding="4dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/userAvatar"
                        android:paddingBottom="0dp"
                        android:layout_marginRight="8dp"
                        app:layout_goneMarginRight="16dp"
                        android:fontFamily="@font/font_extra_bold"
                        app:layout_constraintRight_toLeftOf="@id/optionsMenuBtn"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toRightOf="@id/userAvatar"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/userName"
                        app:layout_constraintRight_toLeftOf="@id/optionsMenuBtn"

                        app:layout_constraintLeft_toLeftOf="@id/userName"
                        android:id="@+id/subtitleLayout"
                        >
                        <TextView
                            android:textColor="@color/colorPostSubtitle"
                            android:textSize="14sp"
                            tools:text="1 mês atrás"
                            android:id="@+id/timeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/font_regular"
                            app:layout_constraintHorizontal_bias="0.0"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewIcon"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_star"
                            />
                        <TextView
                            android:textColor="@color/colorPostSubtitle"
                            android:textSize="14sp"
                            tools:text="1322"
                            android:id="@+id/viewsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/font_regular"
                            app:layout_constraintHorizontal_bias="0.0"
                            />


                    </LinearLayout>



                    <TextView
                        android:id="@+id/exclusiveTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:drawableLeft="@drawable/ic_star"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:text="Exclusivo para assinantes"
                        android:textColor="@color/colorPostExclusive"
                        android:visibility="visible"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitleLayout" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPostDescription"
                        android:textSize="15sp"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Olá, pessoal. TUdo bem?\nSou a Raquel\nEsse é meu link www.google.com.br\nEsse meu e-mail raquel@raquel.com.br"
                        android:autoLink="all"
                        android:textColorLink="@color/colorAccent"
                        app:layout_constraintTop_toBottomOf="@id/exclusiveTxt"
                        android:id="@+id/description"
                        />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/bottomBtns"
                        app:layout_constraintTop_toBottomOf="@id/description"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:id="@+id/likesLayout"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/likeIcon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_star"
                                />
                            <TextView
                                android:textColor="@color/colorPostNumbers"
                                android:textSize="14sp"
                                tools:text="1322"
                                android:id="@+id/likesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/font_extra_bold"
                                app:layout_constraintHorizontal_bias="0.0"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical|left"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:id="@+id/shareBtn"
                                android:src="@drawable/ic_star"
                                />
                        </LinearLayout>



                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="12dp"
                            app:layout_constraintTop_toBottomOf="@id/description"
                            android:id="@+id/actionBtn"
                            android:drawableEnd="@drawable/ic_star"
                            android:layout_height="wrap_content"
                            style="@style/PostCallToActionStyle"
                            android:text="Ver comentários agora mesmo"
                            />



                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/colorPostCardBg"
                android:id="@+id/commentsCard"
                android:minHeight="70dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center_vertical|left"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/commentsLayout"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/commentsIcon"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_star"
                            />
                        <TextView
                            android:textColor="@color/colorPostNumbers"
                            android:textSize="14sp"
                            tools:text="1322 comentários"
                            android:id="@+id/commentsCount"
                            android:fontFamily="@font/font_extra_bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/writeCommentBtn"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/ic_star"
                            app:layout_constraintTop_toTopOf="@id/userName"
                            app:layout_constraintBottom_toBottomOf="@id/subtitleLayout"
                            app:layout_constraintRight_toRightOf="parent"
                            />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/commentsRecycler"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="1"-->
            <!--                />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputLayout"
                android:background="@color/colorPostCardBg"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                >

                <ProgressBar
                    android:id="@+id/progress_top"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:indeterminate="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:visibility="visible"
                    android:layout_marginTop="-4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:background="@color/colorPostCardBg"
                    android:indeterminateTint="@color/colorAccent"
                    android:layout_gravity="top"
                    android:layout_above="@+id/input"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/replyLayout"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/colorPostNumbers"
                        android:textSize="13sp"
                        android:text="Respondendo"
                        android:id="@+id/replyTxt"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="16dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"
                        android:paddingRight="32dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/closeReply"
                        />

                </LinearLayout>

                <com.stfalcon.chatkit.messages.MessageInput
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:minHeight="60dp"
                    android:elevation="8dp"
                    app:inputTextColor="@color/white"
                    app:inputButtonIcon="@drawable/input_chat_button_selector"
                    app:inputButtonDefaultBgDisabledColor="@color/transparent"
                    app:inputButtonDefaultBgColor="@color/transparent"
                    app:inputButtonDefaultBgPressedColor="@color/transparent"
                    app:inputButtonHeight="45dp"
                    app:inputButtonWidth="45dp"
                    android:layout_alignParentBottom="true"

                    app:fontFamily="@font/font_light"
                    app:inputBackground="@drawable/input_comments_bg"
                    android:background="@color/colorPostCardBg"
                    android:visibility="visible"
                    app:inputTextSize="14sp"
                    app:inputHintColor="@color/colorInputNewComment"
                    app:inputHint="Comentar..."/>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/loadingLayout"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
