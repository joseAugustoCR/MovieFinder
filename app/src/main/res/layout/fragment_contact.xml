<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.main.contato.ContactFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contato"
        android:textSize="26sp"
        android:paddingTop="16dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/screenTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/logo"
        android:src="@drawable/logo_dinelly"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/screenTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textColor="@color/textColor"
        android:fontFamily="@font/my_fonts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="16sp"
        android:text="Saldanha Marinho , 733 Sala 02, subsolo\nCentro , Bento GonÃ§alves-RS\n(54) 99940-6699"
        />

    <TextView
        android:id="@+id/mapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bt_location"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:padding="8dp"
        android:text="Abrir no mapa"
        android:textColor="@color/textColor"
        app:drawableTint="@color/textColor"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address" />

    <TextView
        android:id="@+id/instagramBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bt_instagram"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:padding="8dp"
        android:text="\@la_cucina_di_nelly"
        android:textColor="@color/textColor"
        app:drawableTint="@color/textColor"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapBtn"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/rateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bt_rate"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:padding="8dp"
        android:text="Nos avalie no Google"
        android:foregroundGravity="center"
        android:textColor="@color/textColor"
        app:drawableTint="@color/textColor"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instagramBtn"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        app:cornerRadius="34dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/whatsappBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:text="Conversar no Whatsapp"
        android:drawableLeft="@drawable/bt_whatsapp"
        android:drawablePadding="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>